{
  "name": "stockbroker",
  "version": "2.0.0",
  "main": "index.js",
  "repository": "ssh://git@bitbucket.org/MaxSvargal/stockbroker.git",
  "author": "MaxSvargal <maxsvargal@gmail.com>",
  "license": "MIT",
  "scripts": {
    "exchanger": "DEBUG=dev ACCOUNT=maxsvargal PAIRS=BTCUSD NODE_PATH=./src ts-node ./src/exchanger/index.ts",
    "trader": "nodemon",
    "build": "tsc",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "src/.*(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "automock": false,
    "verbose": true,
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json",
        "skipBabel": true
      }
    },
    "testEnvironment": "node",
    "modulePaths": [
      "<rootDir>/src/"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*.ts"
    ],
    "ext": "ts js json",
    "ignore": [
      "*.test.ts"
    ],
    "exec": "DEBUG=worker ACCOUNT=maxsvargal PAIRS=BTCUSD NODE_PATH=./src ts-node ./src/trader/index.ts"
  },
  "dependencies": {
    "autobahn": "^17.5.2",
    "bitfinex-api-node": "https://github.com/MaxSvargal/bitfinex-api-node.git",
    "immutable": "^3.8.1",
    "pouchdb": "^6.3.4",
    "redux": "^3.7.2",
    "redux-act": "^1.4.0",
    "redux-pouchdb-rethink": "^1.1.0",
    "redux-saga": "^0.15.6",
    "reselect": "^3.0.1",
    "typescript": "^2.5.2"
  },
  "devDependencies": {
    "@types/autobahn": "^0.9.37",
    "@types/debug": "^0.0.30",
    "@types/jest": "^20.0.8",
    "@types/node": "^8.0.28",
    "@types/pouchdb": "^6.3.0",
    "debug": "^3.0.1",
    "jest": "^21.0.2",
    "jest-cli": "^21.1.0",
    "nodemon": "^1.12.1",
    "redux-mock-store": "^1.2.3",
    "redux-saga-test-plan": "^3.1.0",
    "ts-jest": "^21.0.1",
    "tslint": "^5.7.0"
  }
}
