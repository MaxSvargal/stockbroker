{
  "name": "stockbroker",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "dependencies": {
    "@most/core": "^1.1.0",
    "@most/scheduler": "^1.1.0",
    "@most/types": "^1.0.0",
    "binance-api-node": "^0.5.0",
    "cote": "^0.16.0",
    "debug": "^3.1.0",
    "most": "^1.7.2",
    "most-subject": "^6.0.0",
    "pm2": "^2.9.1",
    "ramda": "^0.25.0",
    "redis": "^2.8.0",
    "redis-stream": "^0.1.0",
    "technicalindicators": "^1.0.21",
    "ts-node": "^4.0.2"
  },
  "devDependencies": {
    "@types/cote": "^0.14.3",
    "@types/debug": "^0.0.30",
    "@types/jest": "22.1.0",
    "@types/node": "9.4.0",
    "@types/node-fetch": "^1.6.7",
    "@types/ramda": "types/npm-ramda#dist",
    "@types/redis": "^2.8.3",
    "jest": "^22.0.3",
    "mock-socket": "^7.1.0",
    "most-test": "^1.3.0",
    "node-fetch": "^1.7.3",
    "nodemon": "^1.14.0",
    "ts-jest": "^22.0.0",
    "typescript": "^2.6.2"
  },
  "scripts": {
    "test": "jest",
    "dev-exchange-listener": "nodemon ./services/exchange-listener --watch services/exchange-listener",
    "dev-redis-persist": "nodemon ./services/redis-persist --watch services/redis-persist",
    "dev-redis-responder": "nodemon ./services/redis-responder --watch services/redis-responder",
    "dev-signal-publisher": "nodemon ./services/signal-publisher --watch services/signal-publisher",
    "dev-binance-account": "nodemon ./services/binance-account --watch services/binance-account",
    "dev-trade-master": "nodemon ./services/trade-master --watch services/trade-master",
    "dev-pm2-manager": "nodemon ./services/pm2-manager --watch services/pm2-manager",
    "dev-signals-killer": "nodemon ./services/signals-killer --watch services/signals-killer"
    "dev-db": "nodemon ./services/db-rethink --watch services/db-rethink"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/MaxSvargal/stockbroker.git"
  },
  "author": "",
  "license": "ISC",
  "homepage": "https://bitbucket.org/MaxSvargal/stockbroker#readme",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "services/.*(test|spec)\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "automock": false,
    "verbose": true,
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json",
        "skipBabel": true
      }
    },
    "testEnvironment": "node",
    "modulePaths": [
      "<rootDir>/services/"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "services/**/*.ts"
    ],
    "ext": "ts js json",
    "ignore": [
      "*.test.ts"
    ],
    "exec": "ts-node"
  }
}
