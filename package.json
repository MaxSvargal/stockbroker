{
  "name": "stockbroker",
  "version": "2.0.0",
  "main": "index.js",
  "repository": "ssh://git@bitbucket.org/MaxSvargal/stockbroker.git",
  "author": "MaxSvargal <maxsvargal@gmail.com>",
  "license": "MIT",
  "scripts": {
    "exchanger": "DEBUG=worker ACCOUNT=maxsvargal PAIRS=BTCUSD NODE_PATH=./src ts-node ./src/exchanger/index.ts",
    "mcstoch": "DEBUG=worker ACCOUNT=maxsvargal PAIR=BTCUSD NODE_PATH=./src ts-node ./src/mcstoch/index.ts",
    "dev": "nodemon",
    "build": "tsc",
    "test": "jest",
    "pm2:reload": "pm2 startOrReload ecosystem.config.js --update-env"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "src/.*(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "automock": false,
    "verbose": true,
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json",
        "skipBabel": true
      }
    },
    "testEnvironment": "node",
    "modulePaths": [
      "<rootDir>/src/"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*.ts"
    ],
    "ext": "ts js json",
    "ignore": [
      "*.test.ts"
    ],
    "exec": "DEBUG=worker ACCOUNT=maxsvargal PAIR=BTCUSD NODE_PATH=./src ts-node ./src/wally/index.ts"
  },
  "dependencies": {
    "@most/core": "^0.15.0",
    "@most/scheduler": "^0.13.1",
    "autobahn": "^17.5.2",
    "bignumber.js": "^4.1.0",
    "bitfinex-api-node": "1.2.1",
    "csv": "^1.1.1",
    "csv-parse": "^1.2.4",
    "most": "^1.7.2",
    "most-subject": "^6.0.0",
    "ramda": "^0.25.0",
    "redis": "^2.8.0",
    "redux": "^3.7.2",
    "redux-act": "^1.4.0",
    "redux-logger": "^3.0.6",
    "redux-most": "^0.6.2",
    "redux-node-logger": "^0.1.0",
    "redux-saga": "0.16.0",
    "typescript": "^2.5.2"
  },
  "devDependencies": {
    "@types/autobahn": "^0.9.37",
    "@types/debug": "^0.0.30",
    "@types/jest": "^21.1.2",
    "@types/node": "^8.0.28",
    "@types/ramda": "types/npm-ramda#dist",
    "@types/redis": "^2.6.1",
    "@types/redux-logger": "^3.0.5",
    "debug": "3.1.0",
    "jest": "^21.0.2",
    "jest-cli": "^21.1.0",
    "most-test": "^1.3.0",
    "nodemon": "^1.12.1",
    "redux-mock-store": "^1.2.3",
    "redux-saga-test-plan": "^3.1.0",
    "ts-jest": "^21.0.1",
    "tslint": "^5.7.0"
  }
