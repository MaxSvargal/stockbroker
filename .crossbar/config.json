{
  "version": 2,
  "controller": {
    "id": "stockbroker"
  },
  "workers": [
    {
       "type": "router",
       "realms": [
         {
          "name": "maxsvargal/btc/eth",
          "roles": [
            {
              "name": "anonymous",
              "permissions": [
                {
                  "uri": "*",
                   "allow": {
                      "call": true,
                      "register": true,
                      "publish": true,
                      "subscribe": true
                   },
                   "cache": true
                }
              ]
            }
          ]
        },
        {
         "name": "maxsvargal/btc/dash",
         "roles": [
           {
             "name": "anonymous",
             "permissions": [
               {
                 "uri": "*",
                  "allow": {
                     "call": true,
                     "register": true,
                     "publish": true,
                     "subscribe": true
                  },
                  "cache": true
               }
             ]
           }
         ]
       }
      ],
      "transports": [
        {
          "type": "web",
          "endpoint": {
            "type": "tcp",
            "port": 8080
          },
          "paths": {
            "/": {
              "type": "reverseproxy",
              "host": "localhost",
              "port": 8085
            },
            "ws": {
              "type": "websocket",
              "url": "ws://localhost:8080/ws"
            }
          }
        }
      ]
    }
  ]
}
