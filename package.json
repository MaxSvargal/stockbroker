{
  "name": "stockbroker",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "dependencies": {
    "aes256": "^1.0.3",
    "binance-api-node": "0.7.3",
    "cote": "^0.16.0",
    "debug": "^3.1.0",
    "most": "^1.7.2",
    "node-fetch": "2.1.1",
    "pm2": "2.10.1",
    "ramda": "^0.25.0",
    "rethinkdb": "^2.3.3",
    "technicalindicators": "^1.1.8",
    "ts-node": "5.0.1"
  },
  "devDependencies": {
    "@most/core": "^1.1.0",
    "@most/scheduler": "^1.1.0",
    "@most/types": "^1.0.0",
    "@types/cote": "^0.14.3",
    "@types/debug": "^0.0.30",
    "@types/jest": "22.2.0",
    "@types/node": "9.4.7",
    "@types/node-fetch": "^1.6.7",
    "@types/ramda": "types/npm-ramda#dist",
    "@types/rethinkdb": "^2.3.9",
    "jest": "^22.0.3",
    "mock-socket": "^7.1.0",
    "most-test": "^1.3.0",
    "nodemon": "^1.17.2",
    "ts-jest": "^22.0.0",
    "typescript": "^2.6.2"
  },
  "scripts": {
    "test": "jest",
    "dev-exchange-account": "nodemon ./services/exchange-account --watch services/exchange-account",
    "dev-trade-master": "nodemon ./services/trade-master --watch services/trade-master",
    "dev-pm2-manager": "nodemon ./services/pm2-manager --watch services/pm2-manager",
    "dev-signallers-manager": "nodemon ./services/signallers-manager --watch services/signallers-manager",
    "dev-signaller": "nodemon ./services/signaller --watch services/signaller",
    "dev-db": "nodemon ./services/db-rethink --watch services/db-rethink"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/MaxSvargal/stockbroker.git"
  },
  "author": "",
  "license": "ISC",
  "homepage": "https://bitbucket.org/MaxSvargal/stockbroker#readme",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "services/.*(test|spec)\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "automock": false,
    "verbose": true,
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json",
        "skipBabel": true
      }
    },
    "testEnvironment": "node",
    "modulePaths": [
      "<rootDir>/services/"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "services/**/*.ts"
    ],
    "ext": "ts js json",
    "ignore": [
      "*.test.ts"
    ],
    "exec": "ts-node"
  }
}
