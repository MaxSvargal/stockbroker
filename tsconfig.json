{
  "compilerOptions": {
    "paths": {
      "rambda": [
        "node_modules/npm-ramda/index"
      ]
    },
    "module": "commonjs",
    "target": "es2017",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true
  },
  "exclude": [
    "build",
    "node_modules",
    "*.test.ts"
  ]
}
